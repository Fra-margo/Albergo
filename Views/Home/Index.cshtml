@model Esercizio.Models.Utente

@{
    ViewBag.Title = "Index";
}

<div class="container d-flex flex-column align-items-center">
    <h2>Login</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        if (TempData["ErrorLogin"] != null)
        {
            <div class="alert alert-danger">
                Le credenziali non sono corrette
            </div>
        }

        <div class="mb-3">
            @Html.LabelFor(model => model.Username, new { @class = "form-label fw-bold" })
            @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control" } })
        </div>

        <div class="mb-3">
            @Html.LabelFor(model => model.Password, new { @class = "form-label fw-bold" })
            @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
        </div>

        <div class="mb-3 form-check">
            @Html.CheckBox("keepLogged", true, new { @class = "form-check-input" })
            <label class="form-check-label" for="keepLogged">Mantienimi loggato</label>
        </div>

        <div class="text-center">
            <button type="submit" class="btn btn-primary">Login</button>
        </div>
    }
</div>