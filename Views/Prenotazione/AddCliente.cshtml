
@using (Html.BeginForm("AddCliente", "Prenotazione", FormMethod.Post))
{
    @Html.AntiForgeryToken()

<div class="m-3">
    <h3 class="mb-4">Inserisci dati cliente:</h3>
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        <label>Nome:</label>
        <input name="Nome" type="text" class="form-control" />
    </div>
    <div class="form-group">
        <label>Cognome:</label>
        <input name="Cognome" type="text" class="form-control" />
    </div>
    <div class="form-group">
        <label>Codice Fiscale:</label>
        <input name="CodiceFiscale" type="text" class="form-control" />
    </div>
    <div class="form-group">
        <label>Città:</label>
        <input name="Città" type="text" class="form-control" />
    </div>
    <div class="form-group">
        <label>Provincia:</label>
        <input name="Provincia" type="text" class="form-control" />
    </div>
    <div class="form-group">
        <label>E-mail:</label>
        <input name="Email" type="email" class="form-control" />
    </div>
    <div class="form-group">
        <label>Telefono:</label>
        <input name="Telefono" type="text" class="form-control" />
    </div>
    <div class="form-group">
        <label>Cellulare:</label>
        <input name="Cellulare" type="text" class="form-control" />
    </div>
    <button class="mt-3">Inserisci </button>

    <p>@Html.ActionLink("Torna indietro", "Index", "Prenotazione")</p>

</div>
}


