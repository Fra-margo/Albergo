@model List<Esercizio.Models.Prenotazione>

@{
    ViewBag.Title = "Tutte le Prenotazioni";
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Tutte le Prenotazioni</h2>
        <p class="mt-3">@Html.ActionLink("Torna indietro", "Index", "Prenotazione")</p>
    </div>
    @if (Model.Count == 0)
    {
        <p class="text-muted">Nessuna prenotazione trovata.</p>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="bg-dark text-white">
                    <tr>
                        <th class="text-center align-middle">ID</th>
                        <th class="text-center align-middle">Data Prenotazione</th>
                        <th class="text-center align-middle">Anno</th>
                        <th class="text-center align-middle">Data Arrivo</th>
                        <th class="text-center align-middle">Data Partenza</th>
                        <th class="text-center align-middle">Caparra Confirmatoria</th>
                        <th class="text-center align-middle">Tariffa Applicata</th>
                        <th class="text-center align-middle">Tipo Soggiorno</th>
                        <th class="text-center align-middle">Cliente</th>
                        <th class="text-center align-middle">Camera</th>
                        <th class="text-center align-middle">Totale da Pagare</th>
                        <th class="align-middle"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var prenotazione in Model)
                    {
                        <tr>
                            <td class="text-center align-middle">@prenotazione.IdPrenotazione</td>
                            <td class="text-center align-middle">@prenotazione.DataPrenotazione.ToShortDateString()</td>
                            <td class="text-center align-middle">@prenotazione.Anno</td>
                            <td class="text-center align-middle">@prenotazione.DataArrivo.ToShortDateString()</td>
                            <td class="text-center align-middle">@prenotazione.DataPartenza.ToShortDateString()</td>
                            <td class="text-center align-middle">@prenotazione.CaparraConfirmatoria.ToString("C")</td>
                            <td class="text-center align-middle">@prenotazione.TariffaApplicata.ToString("C")</td>
                            <td class="text-center align-middle">@prenotazione.TipoSoggiorno</td>
                            <td class="text-center align-middle">@prenotazione.CodiceFiscale</td>
                            <td class="text-center align-middle">@prenotazione.NumeroCamera</td>
                            <td class="text-center align-middle">@prenotazione.TotaleDaPagare.ToString("C")</td>
                            <td class="align-middle"><a href="@Url.Action("Checkout", "Checkout", new { idPrenotazione = prenotazione.IdPrenotazione })" class="btn btn-primary btn-sm">Checkout</a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>